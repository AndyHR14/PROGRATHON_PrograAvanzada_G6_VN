@model PROGRATHON.Models.Laboratorio

@{
    ViewData["Title"] = "Crear Laboratorio";
}

<div class="container mt-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="mb-0 text-primary">Nuevo laboratorio</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <form asp-action="Crear" method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="NombreLab" class="form-label">Nombre del laboratorio</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-building"></i></span>
                            <input asp-for="NombreLab" class="form-control" placeholder="Ej: Lab Redes 1" />
                        </div>
                        <span asp-validation-for="NombreLab" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Capacidad" class="form-label">Capacidad</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-people"></i></span>
                            <input asp-for="Capacidad" class="form-control" type="number" min="1" step="1" placeholder="Ej: 30" />
                        </div>
                        <span asp-validation-for="Capacidad" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Responsable" class="form-label">Responsable</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                            <input asp-for="Responsable" class="form-control" placeholder="Ej: Ing. María López" />
                        </div>
                        <span asp-validation-for="Responsable" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check2-circle me-1"></i> Guardar
                    </button>
                    <button type="reset" class="btn btn-outline-danger">
                        <i class="bi bi-arrow-counterclockwise me-1"></i> Limpiar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
