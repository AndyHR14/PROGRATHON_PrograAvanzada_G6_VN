@model IEnumerable<PROGRATHON.Models.Laboratorio>

@{
    ViewData["Title"] = "Laboratorios";
    var total = Model?.Count() ?? 0;
}

<div class="container mt-4">
    <!-- Encabezado y Toolbar -->
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h2 class="mb-0 text-primary">Laboratorios</h2>
            <small class="text-muted">Total registrados: <span class="badge bg-secondary">@total</span></small>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Crear" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i> Nuevo laboratorio
            </a>
        </div>
    </div>

    <!-- Buscador (filtrado en cliente) -->
    <div class="card shadow-sm border-0 mb-3">
        <div class="card-body">
            <div class="row g-2 align-items-center">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input id="filtroLabs" type="text" class="form-control" placeholder="Filtrar por nombre o responsable...">
                    </div>
                </div>
                <div class="col-md-6 text-md-end">
                    <span class="text-muted small">
                        Consejo: escribe para filtrar la tabla en tiempo real.
                    </span>
                </div>
            </div>
        </div>
    </div>

    @if (total == 0)
    {
        <!-- Para cuando la lista esta vacia -->
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <div class="mb-3">
                    <i class="bi bi-building display-5 text-secondary"></i>
                </div>
                <h5 class="fw-semibold mb-1">Aún no hay laboratorios registrados</h5>
                <p class="text-muted mb-4">Crea tu primer laboratorio para comenzar a recibir reservas.</p>
                <a asp-action="Crear" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i> Crear laboratorio
                </a>
            </div>
        </div>
    }
    else
    {
        <!-- Tabla -->
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th scope="col" class="text-nowrap">ID</th>
                        <th scope="col">Nombre</th>
                        <th scope="col" class="text-nowrap">Capacidad</th>
                        <th scope="col">Responsable</th>
                        <th scope="col" class="text-end text-nowrap">Acciones</th>
                    </tr>
                </thead>
                <tbody id="tablaLabs">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-muted">@item.IDLab</td>
                            <td class="fw-semibold">@item.NombreLab</td>
                            <td>
                                <span class="badge bg-info-subtle text-info-emphasis border border-info-subtle">
                                    @item.Capacidad
                                </span>
                            </td>
                            <td>@item.Responsable</td>
                            <td class="text-end">
                                <a asp-action="Eliminar" asp-route-id="@item.IDLab" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash3"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Filtro simple en cliente por NombreLab o Responsable
        (function () {
            const input = document.getElementById('filtroLabs');
            const tbody = document.getElementById('tablaLabs');
            if (!input || !tbody) return;

            input.addEventListener('input', function () {
                const q = this.value.toLowerCase();
                for (const row of tbody.rows) {
                    const nombre = (row.cells[1]?.innerText || '').toLowerCase();
                    const responsable = (row.cells[3]?.innerText || '').toLowerCase();
                    row.style.display = (nombre.includes(q) || responsable.includes(q)) ? '' : 'none';
                }
            });
        })();
    </script>
}
