@model IEnumerable<PROGRATHON.Models.Reserva>

@{
    ViewData["Title"] = "Reservas";
}

<h2>Reservas</h2>

<p>
    <a class="btn btn-primary" asp-action="Crear">Nueva Reserva</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Usuario</th>
            <th>Laboratorio</th>
            <th>Fecha y hora</th>
            <th>Activa</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Usuario?.NombreUsuario</td>
                <td>@r.Laboratorio?.NombreLab</td>
                <td>@r.FechaYHora.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@(r.Activa ? "Sí" : "No")</td>
                <td>
                    @if (r.Activa)
                    {
                        <form asp-action="Cancelar" method="post" style="display:inline">
                            <input type="hidden" name="id" value="@r.IDReserva" />
                            <button type="submit" class="btn btn-sm btn-danger">Cancelar</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
