@model PROGRATHON.Models.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="container mt-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="mb-0 text-primary">Nuevo usuario</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <form asp-action="Crear" method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="NombreUsuario" class="form-label">Nombre</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                            <input asp-for="NombreUsuario" class="form-control" placeholder="Ej: Ana Solís" />
                        </div>
                        <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CorreoElectronico" class="form-label">Correo electrónico</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input asp-for="CorreoElectronico" class="form-control" type="email" placeholder="ana@universidad.edu" />
                        </div>
                        <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label d-block">Tipo de usuario</label>
                        <div class="btn-group" role="group" aria-label="Tipo de usuario">
                            <!-- False = Estudiante ; True = Profesor -->
                            <input type="radio" class="btn-check" name="TipoUsuario" id="tipoEstudiante" value="false" checked>
                            <label class="btn btn-outline-info" for="tipoEstudiante">
                                <i class="bi bi-mortarboard me-1"></i> Estudiante
                            </label>

                            <input type="radio" class="btn-check" name="TipoUsuario" id="tipoProfesor" value="true">
                            <label class="btn btn-outline-primary" for="tipoProfesor">
                                <i class="bi bi-easel2 me-1"></i> Profesor
                            </label>
                        </div>
                        <div class="form-text">Elige si el usuario es Estudiante o Profesor.</div>
                        <span asp-validation-for="TipoUsuario" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check2-circle me-1"></i> Guardar
                    </button>
                    <button type="reset" class="btn btn-outline-danger">
                        <i class="bi bi-arrow-counterclockwise me-1"></i> Limpiar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
