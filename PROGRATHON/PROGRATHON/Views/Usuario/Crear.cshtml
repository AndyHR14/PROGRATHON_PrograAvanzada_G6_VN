@model PROGRATHON.Models.Usuario
<h2>Formulario de Creacion</h2>

<form asp-action="Crear">

    <div class="mb-3">
        <label for="" class="form-label">Nombre</label>
        <input type="text"
               class="form-control"
               asp-for="NombreUsuario"
               aria-describedby="helpId"
               placeholder="Ingre su Nombre" />
        <small id="helpId" class="form-text text-muted">Help text Nombre</small>
    </div>

    <div class="btn-group-toggle" data-toggle="buttons">
        <label class="btn btn-secondary active">
            <input type="checkbox" checked autocomplete="off" asp-for="CorreoElectronico"> Checked
        </label>
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Correo Electronico</label>
        <input type="email"
               class="form-control"
               asp-for="CorreoElectronico"
               aria-describedby="helpId"
               placeholder="Ingrese su Correo" />
        <small id="helpId" class="form-text text-muted">Help text Correo</small>
    </div>

    <button type="submit"
            class="btn btn-primary">
        Guardar
    </button>
    <button type="reset"
            class="btn btn-danger">
        Reset
    </button>

    <a asp-action="Index"
       class="btn btn-warning">
        Volver
    </a>

</form>